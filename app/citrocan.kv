#:kivy 1.9.0

FloatLayout:
  orientation: 'horizontal'

  canvas.before:
    Color:
      rgba: .8, .5, 0, 1
    Rectangle:
      size: self.size

  canvas:
    Color:
      rgba: 0, 0, 0, .5
    Line:
      points: 0, 0, 1024, 0, 1024, 252, 0, 252
      width: 1.2
      close: True
    Color:
      rgba: 0, 0, 0, 1
    Line:
      points: 328, 2, 328, 250
      width: 1.5
    Line:
      points: 482, 135, 482, 38, 1022, 38
      width: 1.5

  Label:
    pos: 0, 19
    size_hint: None, None
    size: self.texture_size
    color: 0, 0, 0, 1
    font_size: 38
    text_size: 328, None
    halign: "center"
    text: app.d_date

  Label:
    pos: 0, 77
    size_hint: None, None
    size: self.texture_size
    color: 0, 0, 0, 1
    font_size: 76
    font_name: 'RobotoMono-Regular'
    text_size: 328, None
    halign: "center"
    bold: True
